{
  "env": {
    "browser": true,
    "es2023": true
  },
  "extends": ["plugin:prettier/recommended"],
  "globals": {
    "define": "readonly",
    "L": "writable",
    "module": "readonly",
    "require": "writable"
  },
  "root": true,
  "rules": {
    "no-lonely-if": "error",
    "no-undef": "error",
    "no-unused-expressions": ["error", { "allowTernary": true }],
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
}
